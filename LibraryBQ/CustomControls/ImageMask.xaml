<UserControl x:Class="LibraryBQ.CustomControls.ImageMask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryBQ.CustomControls"
             mc:Ignorable="d" >
    <Grid>
        <!-- 이미지 출력 -->
        <Image Source="{Binding MaskImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        
        <!-- 이미지 소스에 색상 입히기용 직사각형 컨트롤 오버레이
            - 이미지 위에 같은 이미지 모양을 색상으로 마스킹 처리
            - Rectangle에 같은 이미지 브러시를 OpacityMask로 지정하여 색상 변화 가능
            - UI 일관성 및 강조를 위한 기술적 트릭
        -->
        <Rectangle Stroke="Transparent"
                   Fill="{Binding MaskingColor, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="{Binding MaskImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </Grid>
</UserControl>
